<?xml version="1.0" ?>
<sdf version="1.9">
  <world name="pole_z_beczkami">

    <!-- GPS -->
    <spherical_coordinates>
      <surface_model>EARTH_WGS84</surface_model>
      <latitude_deg>52.229770</latitude_deg>
      <longitude_deg>21.011780</longitude_deg>
      <elevation>100.0</elevation>
    </spherical_coordinates>

    <!-- Światło -->
    <include>
      <uri>https://fuel.gazebosim.org/1.0/OpenRobotics/models/Sun</uri>
    </include>

