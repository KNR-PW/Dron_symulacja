      <pose>20 0 0 0 0 0</pose>
      <link name="ground">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>40 30</size>
            </plane>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>40 30</size>
            </plane>
          </geometry>
          <material>
            <pbr>
              <metal>
                <albedo_map>materials/textures/plowed_field.png</albedo_map>
              </metal>
            </pbr>
          </material>
        </visual>
      </link>
    </model>

    <!-- Beczki -->
    <include>
      <uri>model://barrel_blue</uri>
      <pose>25 -5 0 0 0 0</pose>
    </include>

    <include>
      <uri>model://barrel_green</uri>
      <pose>30 6 0 0 0 0</pose>
    </include>

    <include>
      <uri>model://barrel_red</uri>
      <pose>35 0 0 0 0 0</pose>
    </include>

    <!-- Drzewka -->
    <include>
      <uri>model://small_tree</uri>
      <pose>18 -10 0 0 0 0</pose>
    </include>

   

  </world>
